doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width,initial-scale=1.0")
    title Colors
  body
    header.header
      .header-wrapper
        button.burger
        img.logo(src='./images/Logo-SVG.svg' alt="Logo")
        nav.nav
          ul.nav__list
            li.nav__item
              a.nav__link(href="#") Продукты
            li.nav__item
              a.nav__link(href="#") Цвета
            li.nav__item
              a.nav__link(href="#") Вдохновение
            li.nav__item
              a.nav__link(href="#") Советы
            li.nav__item
              a.nav__link(href="#") Найти магазин
        section.contact
          a.tel(href="tel:") +7(495)221-77-69
          button.callback Заказать звонок
        section.buttons
          ul.buttons__list
            li.buttons__item
              button.buttons__search
            li.buttons__item
              button.buttons__profile
            li.buttons__item
              button.buttons__favourites
            li.buttons__item
              button.buttons__cart
    
    main.main
      section.carousel
        .carousel-wrapper
          img(src="./images/Carousel-Background.png", alt="Background-image")

      .breadcrubs
        span Главная
        span Продукты
        span Краски

      h1.mobile-title Краски

      aside.filters
        button.mobile-filters__close

        .switch_box.box_1
          input.switch_1(type='checkbox')
          p Новинки
        .switch_box.box_1
          input.switch_1(type='checkbox')
          p Есть в наличии
        .switch_box.box_1
          input.switch_1(type='checkbox')
          p Контрактные
        .switch_box.box_1
          input.switch_1(type='checkbox')
          p Эксклюзивные
        .switch_box.box_1
          input.switch_1(type='checkbox')
          p Распродажа

      article.catalog
        section.catalog-header
          button.catalog-filters Фильтры
          p.catalog__amount 412 товаров
          select.catalog__sort(type='text' name='sort')
            option(value='value1') Сначала дорогие
            option(value='value2') Сначала недоргие
            option(value='value3') Сначала популярные
            option(value='value4') Сначала новые
        
        section.catalog-items
          ul.catalog-items__list
            li
              article.catalog-items__item.catalog-item
                a(href="")
                  img.catalog-item__image(src="./images/Photo0-Hover.png", alt="")
                  h3.catalog-item__title Краска Wallquest, Brownsone MS90102
                p.catalog-item__cost 6000 &#8381
                button.catalog-item__button +

      article.cart
        section.cart-header
          h2.cart-title Корзина
          button.cart-close X
        section.cart-items
          .cart-items__header
            p.cart-items__amount 4 товара
            button.cart-items__clean Очистить список
          form.cart-form(action='#' method='POST')
            ul.cart__list
              li.cart__item.cart-item
                img.cart-item__image(src="./images/Photo1.png", alt="Название товара")
                .cart-item__detailes
                  h3.cart-item__title Краска Wallquest, Brownsone MS90102
                  span.cart-item__cost 6000 &#8381
                  .cart-item__counter
                    button(type='button' aria-label='Убрать один товар')
                      svg(width='10' height='10' fill='currentColor')
                        use(xlink:href='#icon-minus')
                    input(type='text' value='1' name='count')
                    button(type='button' aria-label='Добавить один товар')
                      svg(width='10' height='10' fill='currentColor')
                        use(xlink:href='#icon-plus')
                  button.cart-item__del(type='button' aria-label='Удалить товар из корзины')
            section.cart-footer
              .cart-total
                span Итого
                span 6000 &#8381
              button(type='submit' aria-label='Оформить заказ') Оформить заказ


      footer.footer



